[colors]
background = ${xrdb:background:#229933}
;background = #229933
;background = #000000
background-alt = #444
foreground = ${xrdb:color15:#fff}
;foreground = #dfdfdf
foreground-alt = #ffea2e
primary = #ffb52a
secondary = #e60053
alert = #e83b3f

[bar/jade]
bottom = true
;monitor = ${env:MONITOR:HDMI-1}
width = 100%
height = 24
;offset-x = 0
;offset-y = 0
radius = 0
fixed-center = true

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 0
line-color = #f00

border-size = 0
border-color = #00000000

padding-left = 0
padding-right = 0

module-margin-left = 2
module-margin-right = 2

font-0 = FontAwesome:size=9;0
font-1 = togoshi-mono:size=9:weight=bold;0

modules-left = i3 
modules-center = cpu memory wlan
modules-right = mpd mpd2 date

;tray-position = right
;tray-padding = 2
;tray-transparent = false
;tray-background = #0063ff

scroll-up = i3wm-wsnext
scroll-down = i3wm-wsprev

cursor-click = pointer
cursor-scroll = ns-resize

; Enable pseudo transparency
; Will automatically be enabled if a fully transparent
; background color is defined using `tray-background`
tray-transparent = false
tray-background = transparent

[module/xwindow]
