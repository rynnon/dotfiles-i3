'atom-workspace atom-text-editor:not([mini])':
  'ctrl-2': 'editor:toggle-line-comments'

'.platform-win32, .platform-linux':
  'ctrl-3': 'tree-view:toggle'

'body':
  'ctrl-alt-r': 'window:reload'

'atom-workspace':
  'ctrl-i ctrl-g': 'toggle-gutter:gutter'

# -- trash bindings --------------------------------------
'.platform-win32 .tree-view, .platform-linux .tree-view':
  'ctrl-&': 'tree-view:open-selected-entry-in-pane-3'
  'ctrl-/': 'tree-view:open-selected-entry-in-pane-2'
